<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <h1>Editing Product: <%= product.product %></h1>
        <form method="POST" action="/product/<%= product.id %>">
            <label for="product">Product: </label>
            <input type="text" id="product" name="product" value="<%= product.product %>">
            <br/>
            <label for="quantity">Quantity: </label>
            <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>">
            <br/>
            <label for="price">Price: </label>
            <input type="number" id="price" name="price" step=".01" value="<%= product.price %>">
            <br/>
            <label for="description">Description: </label>
            <input type="text" id="description" name="description" value="<%= product.description %>">
            <br/>
            <fieldset>
                <legend>Update Product Categories:</legend>
                <% categories.map((category) => { %>
                        <% if (product.categoryids.includes(category.id)) { %>
                            <div>
                                <input type="checkbox" id=<%= category.id %> name=<%= category.id %> checked/>
                                <label for=<%= category.id %>><%= category.category %></label>
                            </div>
                      <% } else {%>
                            <div>
                                <input type="checkbox" id=<%= category.id %> name=<%= category.id %> />
                                <label for=<%= category.id %>><%= category.category %></label>
                            </div>
                    <% } %>
                <% }) %>
            </fieldset>
            <button type="submit">Save Product Update</button>
        </form>
        <form action="/">
            <input type="submit" value="Return without saving">
        </form>
    </body>
</html>